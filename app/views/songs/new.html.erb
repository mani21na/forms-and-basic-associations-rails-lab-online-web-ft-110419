<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><dr>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><dr>
  <%= f.label :genre %>
  <%= f.collection_select :genre_id , Genre.all, :id, :name %><br><dr>
  <%= f.label :notes %>
  <input id="song_notes_attributes_0_content" name="song[note_contents][]" value="<%= @song.notes.first.content if @song.notes.length > 0%>">
  <input id="song_notes_attributes_1_content" name="song[note_contents][]" value="<%= @song.notes[1].content if @song.notes.length > 1%>">
  <input id="song_notes_attributes_2_content" name="song[note_contents][]" value="<%= @song.notes.last.content if @song.notes.length > 2%>">
  <%= f.submit %>
<% end %>
